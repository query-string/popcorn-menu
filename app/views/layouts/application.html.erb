<!DOCTYPE html>
<html>
  <head>
    <title>PopcornMenu</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-right">
          <%- if current_user %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete =%>
          <%- else %>
            <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-default navbar-btn" =%>
          <%- end %>
        </div>
        <div class="navbar-header">
          <%= link_to 'PopcornMenu', root_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse">
          <%- if current_user %>
            <ul class="nav navbar-nav">
              <li><%= link_to 'Show all', root_path %></li>
              <li><%= link_to 'Would like to watch', group_my_movies_path(:waited) %></li>
              <li><%= link_to 'Watched', group_my_movies_path(:watched) %></li>
              <li><%= link_to 'Would not like to watch', group_my_movies_path(:hated) %></li>
            </ul>
          <%- end %>
        </div>
      </div>
    </nav>

    <div class="container" style='margin-top:100px;'>
      <%= yield %>
    </div>

  </body>
</html>